<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="jfsl.edpam.AccountActivity"
    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView7"
        android:src="@drawable/edpambg02"
        android:scaleType="fitXY" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView8"
        android:src="@drawable/edpam_logo"
        android:layout_marginTop="47dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/editText"
        android:layout_marginBottom="65dp"
        android:layout_alignParentTop="true" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/editText"
        android:hint="Mail"
        android:layout_marginTop="196dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/btnToBase"
        android:layout_alignStart="@+id/btnToBase" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editText2"
        android:hint="Password"
        android:layout_below="@+id/imageView8"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="@string/Login"
        android:id="@+id/btnToBase"
        android:background="@drawable/shape2"
        android:backgroundTint="@color/abc_background_cache_hint_selector_material_light"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_below="@+id/editText2"
        android:layout_alignLeft="@+id/editText2"
        android:layout_alignStart="@+id/editText2"
        android:layout_marginTop="38dp"
        android:onClick="toBase" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="_______ Or Connect With _______"
        android:id="@+id/textView"
        android:layout_marginTop="47dp"
        android:layout_below="@+id/btnToBase"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="@string/Facebook"
        android:id="@+id/button5"
        android:background="@drawable/shape"
        android:backgroundTint="@color/colorPrimary"
        android:textColor="@color/background_material_light"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/btnToBase"
        android:layout_alignStart="@+id/btnToBase"
        android:layout_marginTop="31dp" />

</RelativeLayout>
